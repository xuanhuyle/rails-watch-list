<h1>Add a new bookmark to <%= @list.name %></h1>

<%= simple_form_for [@list, @bookmark], html: { local: true } do |form| %>
  <div>
    <%= form.input :movie_id, collection: @movies, label: "Select Movie", as: :select, include_blank: false %>
  </div>
  <div>
    <%= form.input :comment %>
  </div>
  <div>
    <%= form.button :submit, 'Add Bookmark' %>
  </div>
<% end %>

<%= link_to 'Back to List', list_path(@list) %>
