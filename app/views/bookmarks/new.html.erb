<h1>Add a new bookmark to <%= @list.name %></h1>

<%= form_with(model: [@list, @bookmark], local: true) do |form| %>
  <div>
    <%= form.label :movie_id, "Select Movie" %>
    <%= form.collection_select :movie_id, @movies, :id, :title %>
  </div>
  <div>
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>
  <div>
    <%= form.submit 'Add Bookmark' %>
  </div>
<% end %>

<%= link_to 'Back to List', list_path(@list) %>
